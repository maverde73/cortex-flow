// Simple test workflow for Lark parser

workflow simple_test {
    version: "1.0"
    description: "Simple test workflow"
    triggers: ["test"]

    params {
        topic = "AI"
    }

    nodes {
        research = researcher()
            instruction: "Research {topic}"

        analyze = analyst()
            depends_on: [research]
            instruction: "Analyze results"

        write = writer()
            depends_on: [analyze]
            instruction: "Write report"
    }
}
