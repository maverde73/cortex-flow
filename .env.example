# ============================================================================
# CORTEX-FLOW ENVIRONMENT VARIABLES
# ============================================================================
#
# This file contains ONLY secrets and sensitive data.
# All other configuration is in JSON files under projects/{name}/
#
# Copy this file to .env and fill in your API keys.
# Never commit .env to version control!
#
# ============================================================================

# ============================================================================
# LLM API KEYS
# ============================================================================

# OpenAI API Key
# Get yours at: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic API Key
# Get yours at: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Google AI API Key (optional)
# Get yours at: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=

# Groq API Key (optional)
# Get yours at: https://console.groq.com/
GROQ_API_KEY=

# OpenRouter API Key (optional)
# Get yours at: https://openrouter.ai/keys
OPENROUTER_API_KEY=

# ============================================================================
# TOOL API KEYS
# ============================================================================

# Tavily API Key (for web research)
# Get yours at: https://tavily.com/
TAVILY_API_KEY=

# Reddit API Credentials (optional)
# Get yours at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# ============================================================================
# DATABASE URLS
# ============================================================================

# PostgreSQL Connection URL (for state persistence)
# Format: postgresql://user:password@host:port/database
POSTGRES_URL=

# Redis Connection URL (for state persistence)
# Format: redis://host:port/db
REDIS_URL=

# ============================================================================
# LANGSMITH (OBSERVABILITY)
# ============================================================================

# LangSmith API Key (optional, for tracing and debugging)
# Get yours at: https://smith.langchain.com/
LANGSMITH_API_KEY=

# LangSmith Project Name
LANGSMITH_PROJECT=cortex-flow

# Enable LangSmith Tracing
LANGSMITH_TRACING=false

# ============================================================================
# PROJECT MANAGEMENT
# ============================================================================

# Active Project
# Determines which project configuration to load from projects/
# Default: "default"
ACTIVE_PROJECT=default

# ============================================================================
# OPENAI-COMPATIBLE API SERVER
# ============================================================================

# Enable OpenAI-compatible API server
# Set to true to run the OpenAI Chat Completions API compatible endpoint
OPENAI_COMPAT_ENABLE=true

# OpenAI-compatible API Server Port
# Port for the OpenAI-compatible API server (default: 8001)
OPENAI_COMPAT_PORT=8001

# Model Name
# Virtual model name to expose in /v1/models endpoint
OPENAI_COMPAT_MODEL_NAME=cortex-flow

# Maximum Context Tokens
# Maximum number of tokens to maintain in conversation context
OPENAI_COMPAT_MAX_CONTEXT_TOKENS=8000

# Token Counter Model
# Model to use for token counting (gpt-4, gpt-3.5-turbo, etc.)
# This affects token calculation but not actual LLM used
OPENAI_COMPAT_TOKEN_MODEL=gpt-4
